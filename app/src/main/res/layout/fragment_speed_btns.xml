    <TextView
        android:id="@+id/speed_value_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1.0"
        android:layout_marginStart="8dp"
        android:textColor="#FFFFFF"
        android:layout_gravity="center"
        android:textSize="16sp"
        android:gravity="center"/>

    <ImageView
        android:id="@+id/minus_speed_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="3dp"
        android:gravity="center"
        android:src="@drawable/ic_baseline_remove_circle_outline_24"
        android:layout_marginStart="10dp"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />

    <com.google.android.material.slider.Slider
        android:id="@+id/speed_slider"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:haloColor="#CCFFFFFF"
        app:trackColor="#CCFFFFFF"
        app:thumbColor="#CCFFFFFF"
        app:tickColor="#CCFFFFFF"
        android:rotation="0"
        android:stepSize="10.0"
        android:value="100.0"
        android:valueFrom="10.0"
        android:valueTo="250.0" />

    <ImageView
        android:id="@+id/add_speed_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="3dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/ic_baseline_add_circle_outline_24"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />


</LinearLayout>