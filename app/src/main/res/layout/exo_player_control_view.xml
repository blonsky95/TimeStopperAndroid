<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="bottom"
    android:layoutDirection="ltr"
    android:background="#75000000"
    android:orientation="vertical"
    android:layout_marginBottom="4dp"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp"
    tools:targetApi="28">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="4dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/previous_frame_btn"
            android:src="@drawable/ic_previous_frame"
            style="@style/ExoMediaButton.FastForward"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#A8FFFFFF"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            />

        <ImageButton
            android:id="@+id/custom_rewind"
            android:src="@drawable/ic_baseline_fast_rewind_48"
            style="@style/ExoMediaButton.Rewind"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#A8FFFFFF"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            />

        <ImageButton android:id="@id/exo_play"
            android:src="@drawable/ic_baseline_play_arrow_48"
            style="@style/ExoMediaButton.Play"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#A8FFFFFF"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            />

        <ImageButton android:id="@id/exo_pause"
            android:src="@drawable/ic_baseline_pause_48"
            style="@style/ExoMediaButton.Pause"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#A8FFFFFF"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            />

        <ImageButton
            android:id="@+id/custom_forward"
            android:src="@drawable/ic_baseline_fast_forward_48"
            style="@style/ExoMediaButton.FastForward" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#A8FFFFFF"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            />

        <ImageButton
            android:id="@+id/next_frame_btn"
            android:src="@drawable/ic_next_frame"
            style="@style/ExoMediaButton.FastForward"/>
<!--        <TextView-->
<!--            android:id="@+id/next_frame_btn"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:padding="12dp"-->
<!--            android:textSize="16sp"-->
<!--            android:clickable="true"-->
<!--            android:text="N. F."-->
<!--            android:textColor="#FFFFFF"/>-->

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView android:id="@id/exo_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textStyle="bold"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:includeFontPadding="false"
            android:textColor="#FFBEBEBE"/>

<!--        <View android:id="@id/exo_progress_placeholder"-->
<!--            android:layout_width="0dp"-->
<!--            android:layout_weight="1"-->
<!--            android:layout_height="26dp"/>-->

        <com.google.android.exoplayer2.ui.DefaultTimeBar
            android:id="@id/exo_progress"
            android:layout_width="0dp"
            android:layout_weight="1"
            app:played_color="@color/colorPrimaryDark"
            app:scrubber_drawable="@drawable/ic_video_slider_scrubber"
            android:layout_height="26dp"/>

        <TextView android:id="@id/exo_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textStyle="bold"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:includeFontPadding="false"
            android:textColor="#FFBEBEBE"/>

    </LinearLayout>

</LinearLayout>
